# LOGIN VIEW
form.w_sm.mx_auto action: "/signup", method: "post" do
  div.vstack.spacing.xs do
    div { csrf_tag("/signup") }
    div.vstack.spacing.xs do
      label.vstack.spacing.xs do
        span "Enter your email"
        input type: "email", name: "email"
      end
      div.error @error if @error
    end
    button.lg type: "submit" do
      "Login"
    end
  end
end
