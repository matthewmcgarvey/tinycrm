# DEALS VIEW
if @deals.any?
  div.hstack.justify_right do
    a.button href: "/deals/new" do
      "New Deal"
    end
  end
else
  div.vstack.mt_2xl.spacing.sm.text_center do
    p "You haven't made any deals yet, always be closing!"
    a.button.w_fit_content.mx_auto href: "/deals/new" do
      "New Deal"
    end
  end
end

div.vstack.mt_2xl do
  ul do
    @deals.each do |deal|
      li do
        deal.company.name
      end
    end unless @deals.empty?
  end
end
